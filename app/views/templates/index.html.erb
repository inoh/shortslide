<ol class="breadcrumb">
  <li><%= link_to 'HOME', root_path %></li>
  <li class="active">テンプレート一覧</li>
</ol>

<div class="row">
<% @templates.each_with_index do |template, index| %>
  <div class="col-sm-12 col-md-6">
    <div>
      <h3><%= template.name %></h3>
      <iframe width="100%" height="300px" src="<%= template_preview_path(template) %>?full#1"></iframe>
      <div class="caption">
        <p>
          <%= link_to 'Edit', edit_template_path(template), :class => 'btn btn-default' %>
          <%= link_to 'Destroy', template, :class => 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      </div>
    </div>
  </div>
<% end %>
</div>

<br>

