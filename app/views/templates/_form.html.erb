<%= form_for(@template, :html => {:class => "form-horizontal", :role => "form"}) do |f| %>
  <% if @template.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@template.errors.count, "error") %> まだ保存されていません</h2>

      <ul>
      <% @template.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-sm-2' %>
    <div class="col-sm-6 <%= error_class(@template, :name) %>">
      <%= f.text_field :name, :class => "form-control", :placeholder => '識別する名前' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :content, :class => 'control-label col-sm-2' %>
    <div class="col-sm-6 <%= error_class(@template, :content) %>">
      <%= f.text_area :content, :class => "form-control", :rows => 10, :placeholder => 'テンプレートの内容' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <%= f.submit :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
