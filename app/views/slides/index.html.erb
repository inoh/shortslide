<div class="col-xs-4">
  <%= link_to '新しいスライド', new_slide_path, :class => 'btn btn-primary' %>
</div>
<div class="col-xs-8">
  <div class="row">
    <h1>スライドの一覧</h1>
    <hr>
    <% @slides.each do |slide| %>
    <div class="col-xs-6">
      <h3><%= link_to slide.title, slide_path(slide) %></h3>
      <iframe width="100%" height="210px" src="<%= slide_path(slide) %>?full#1"></iframe>
      <p>
        <%= link_to '編集', slide_pages_path(slide_id: slide.id), :class => 'btn btn-default' %>
        <%= link_to '削除', slide, method: :delete, data: { confirm: '削除してもよろしいですか？' }, :class => 'btn btn-danger' %>
      </p>
    </div>
    <% end %>
  </div>
</div>
