<%= form_for(@slide, :html => {:class => "form-horizontal", :role => "form"}) do |f| %>
  <% if @slide.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@slide.errors.count, "error") %> まだ保存されていません</h2>

      <ul>
      <% @slide.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-sm-2' %>
    <div class="col-sm-6 <%= error_class(@slide, :title) %>">
      <%= f.text_field :title, :class => "form-control", :placeholder => '識別する名前' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <%= f.submit :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
