<div class="col-xs-8">
  <div class="row">
    <% @slides.each do |slide| %>
    <div class="col-xs-6">
      <%= render :partial => 'slides/page', :locals => { :slide => slide } %>
    </div>
    <% end %>
  </div>
</div>
<div class="col-xs-4">

  <%= form_for(User.new, :as => :user, :url => user_registration_path(User.new), :html => {:class => "form-horizontal"}) do |f| %>

    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Signup</h3>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <div class="col-sm-12">
            <%= f.text_field :username, :autofocus => true, :placeholder => "Username", :class => "form-control" %>
          </div>
        </div>
    
        <div class="form-group">
          <div class="col-sm-12">
            <%= f.email_field :email, :placeholder => "Email", :class => "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-12">
            <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-12">
            <%= f.password_field :password_confirmation, :placeholder => "Password confirmation", :class => "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-12">
            <%= f.submit "Signup for ShortSlide", :class => "btn col-sm-12" %>
          </div>
        </div>
      </div>
    </div>

  <% end %>

  <%= link_to raw('<img src="/icon/glyphicons_social_30_facebook.png" width="16px"></img> Connect with Facebook'), user_omniauth_authorize_path(:facebook), :class => "btn btn-primary col-sm-12" %>
</div>
