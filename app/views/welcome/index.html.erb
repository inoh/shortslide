<div class="col-xs-4">
  <%= link_to '新しいスライド', new_slide_path, :class => 'btn btn-primary' %>
</div>
<div class="col-xs-8">
  <div class="row">
    <h1>スライドの一覧</h1>
    <hr>
    <% @slides.each do |slide| %>
    <div class="col-xs-6">
      <h3><%= link_to slide.title, slide_preview_path(slide_id: slide.id) %></h3>
      <iframe width="100%" height="210px" src="<%= slide_preview_path(slide_id: slide.id) %>?full#1"></iframe>
    </div>
    <% end %>
  </div>
</div>
