<div class="navbar navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "ShortSlide", root_path, :class => 'navbar-brand' %>
    </div>
    <div class="collapse navbar-collapse">
      <% if session[:user_id] %>
        <ul class="nav navbar-nav">
          <li><%= link_to "Images", images_path %></li>
          <li><%= link_to "Templates", templates_path %></li>
        </ul>
        <div class="navbar-form navbar-right">
          <%= link_to "ログアウト", "/signout", :class => "btn btn-primary" %>
        </div>
      <% else %>
        <div class="navbar-form navbar-right">
          <%=
            if user_signed_in?
              link_to "Logout", destroy_user_session_path, :method => :delete, :class => "btn btn-default"
            else
              link_to "Login", new_user_session_path, :class => "btn btn-default"
            end
          %>
        </div>
      <% end %>
    </div><!-- /.nav-collapse -->
  </div><!-- /.container -->
</div><!-- /.navbar -->
